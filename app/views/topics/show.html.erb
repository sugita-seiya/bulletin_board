<div class ="topics__title">
  <h1><%= @topic.title %></h1>
  <% @posts.each_with_index do |post , idx| %>
    <p>
      <%= idx + 1 %>. <%= post.name %><br><%= post.body %>
    </p>
  <% end %>



  <h3>新規書き込み</h3>
  <%= form_for @newpost, :url => topic_posts_path(@topic) do |f| %>
  <%# <%= form_with @newpost  do |f| %>
    <p>お名前</p>
    <p><%= f.text_field :name %></p>
    <p>本文</p>
    <p><%= f.text_area :body %></p>
    <%= f.hidden_field :topic_id %>
    <%= f.submit %>
  <% end %>

  <div class= "return">
    <%= link_to "戻る", root_path %>
  </div>

</div>